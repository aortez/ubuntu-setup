# we _need_ this stuff
sudo apt-get install vim git gitk gnome-session-flashback multitail meld keepass2 compizconfig-settings-manager compiz-plugins-extra nmon

# re-add the option to disable tap-to-click in ubuntu 17.04
sudo apt-get install xserver-xorg-input-libinput
sudo apt-get remove xserver-xorg-input-synaptics

# TODO: is there a way to make gnome flashback the default session?

# TODO: install atom
sudo add-apt-repository -y ppa:webupd8team/atom
sudo apt-get update 

# install mate-terminal (to restore the lost 'change title' functionality)
# and make it the default
sudo apt-get install mate-terminal
gsettings set org.gnome.desktop.default-applications.terminal exec 'mate-terminal'

# make alt-right-drag resize windows
gsettings set org.gnome.desktop.wm.preferences resize-with-right-button true

# move buttons to right
gsettings set org.gnome.desktop.wm.preferences button-layout ':minimize,maximize,close'

# restore normal scrollbars
gsettings set com.canonical.desktop.interface scrollbar-mode normal

# install a taskbar resident alarm clock, useful for alarms and timers
sudo apt-get install alarm-clock-applet

# gotta have clusterssh
sudo apt-get install clusterssh

# UI for setting monitor refresh rate, very nice!
sudo apt-get install lxrandr

# install shutter
sudo apt-get install shutter
# some manual steps for now...
# disable default screenshot hotkeys
# add 2 custom shortcut hotkeys
# for full screen 'shutter -f' default key print scrn
# for selection area 'shutter -s' default key shift-print scrn

# install oracle java?
sudo add-apt-repository ppa:webupd8team/java
sudo apt-get update
sudo apt-get install oracle-java<X>-installer

# kill that login sound file (s?)
sudo mv /usr/share/sounds/ubuntu/stereo/desktop-login{,-disabled}.ogg
sudo mv /usr/share/sounds/ubuntu/stereo/system-ready{,-disabled}.ogg

# add this to your .bashrc to display git branch and status in the prompt
export PS1='\[\033[01;32m\]\u@\h\[\033[01;34m\] \w\[\033[01;33m\]$(__git_ps1)\[\033[01;34m\] \$\[\033[00m\] '
export GIT_PS1_SHOWDIRTYSTATE=1

# fix broken ttf-mscorefonts-installer issue
sudo apt-get remove -y ttf-mscorefonts-installer
wget http://ftp.de.debian.org/debian/pool/contrib/m/msttcorefonts/ttf-mscorefonts-installer_3.6_all.deb
sudo dpkg -i ttf-mscorefonts-installer_3.6_all.deb

# constrain ssh to specific user(s)
# add to /etc/ssh/sshd_config
AllowUsers oldman

# fix missing ethernet 'device not managed'
sudo touch /etc/NetworkManager/conf.d/10-globally-managed-devices.conf  
